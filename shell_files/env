#!/bin/sh

env_dir() {
  var=$1
  val=$2
  eval old=\$$var
  export $var=$val:$old
}

# rvm
env_dir PATH $HOME/.rvm/bin # Add RVM to PATH for scripting

# path
env_dir PATH /usr/lib/jvm/java-7-openjdk/bin
env_dir PATH ~/.bin
env_dir PATH ~/.sbt
env_dir PATH $HOME/.rvm/bin

export LANG=en_US.utf-8
export LC_CTYPE=en_US.utf-8
export LC_ALL=en_US.utf-8
export TERM=screen-256color
export EDITOR=vim
export METRIC_FU_OUT=$HOME/data/Dropbox/metric_fu
