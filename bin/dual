#!/usr/bin/env ruby

CONFIG_FILE = "~/.config/naps62-screen-setup"

def dual_subvisual(arg)
  puts "x#{arg}"
  case arg
  when "vert", "vertical" then
    "xrandr --output DVI-D-0 --mode 1920x1080 --rotate right --right-of HDMI-0 --mode 1920x1080"
  else
    "xrandr --output DVI-D-0 --mode 1920x1080 --rotate normal --right-of HDMI-0 --mode 1920x1080"
  end
end

def dual_giskard(arg)
  case arg
  when "4k"
    "xrandr --output eDP-1 --primary --mode 1920x1080 --pos 960x2160 --output DP-1 --mode 3840x2160 --pos 0x0"
  else
    "xrandr --output eDP-1 --primary --mode 1920x1080 --pos 320x1440 --output DP-1 --mode 2560x1440 --pos 0x0"
  end
end

cmd = case `hostname`.strip
when "giskard" then dual_giskard(ARGV[0])
when "naps62subvisual" then dual_subvisual(ARGV[0])
end

`#{cmd}`
