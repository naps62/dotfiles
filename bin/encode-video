#!/bin/sh

set -e

while [[ $# -gt 0 ]]; do
  case "$1" in
    friday-talk)
      input="$2"
      tmp="/tmp/$2.mkv"
      output="$3"
      echo $input
      echo $tmp
      echo $output
      ffmpeg -i "$input" -vf scale=1280x720 -c:v h264_amf "$tmp"
      ffmpeg -i "$tmp" -vcodec libvpx-vp9 -acodec vorbis -strict -2 "$output.webm"
      exit 0
      ;;
    *)
      echo "Unknown argument $1"
      exit 1
  esac
done

echo $input
