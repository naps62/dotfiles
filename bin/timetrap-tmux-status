#!/usr/bin/env bash

timetrap_now=`/home/naps62/.rvm/gems/ruby-2.3.0@global/bin/t n 2> /dev/null`

if [[ "$LIVE_CODING" == "1" ]]; then
  echo "#[fg=green] $TALK_TITLE #[default]"
elif [[ "$timetrap_now" =~ \@[a-zA-Z]* ]]; then
  project=${BASH_REMATCH[0]}
  echo "#[fg=green] $project #[default]"
else
  echo "#[fg=red] get to work #[default]"
  exit 1
fi
