{
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.rootPatterns": [".git", "package.json"],
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "typescript", "typescriptreact", "rust", "json"],

  "suggest.autoTrigger":"trigger",
  "suggest.triggerAfterInsertEnter": false,

  "diagnostic.errorSign": "ðŸ’©",
  "diagnostic.hintSign": "â†’",
  "diagnostic.infoSign": "â†’",
  "diagnostic.warningSign": "â†’",
  "diagnostic.highlightOffset": 5,
  "diagnostic.format": "%message",

  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    }
  },


  "elixir.pathToElixirLS": "~/.elixir-ls/release/language_server.sh",

  "eslint.run": "onSave",
  "eslint.options": { "cache": true },
  "eslint.autoFixOnSave": true,

  "solargraph.hover": true,
  /* "solargraph.diagnostics": true, */
  "solargraph.formatting": false,
  "solargraph.useBundler": false,

  "stylelintplus.enable": true,
  "stylelintplus.validateOnSave": true,
  "stylelintplus.autoFixOnSave": true,

  "rust-analyzer.diagnostics.disabled": [
    "macro-error"
  ],
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.updates.channel": "nightly",

  "snippets.extends": {
    "typescriptreact": ["typescript", "javascript"]
  },
  "snippets.userSnippetsDirectory":"~/.config/nvim/snippets"
}
