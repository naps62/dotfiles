{
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.rootPatterns": [".git", "package.json"],
  "coc.preferences.formatOnSaveFiletypes": ["typescript", "ruby"],

  "suggest.triggerAfterInsertEnter": true,
  "suggest.autoTrigger": "trigger",

  "diagnostic.errorSign": "ðŸ’©",
  "diagnostic.hintSign": "â†’",
  "diagnostic.infoSign": "â†’",
  "diagnostic.warningSign": "â†’",
  "diagnostic.highlightOffset": 5,
  "diagnostic.format": "%message",

  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    }
  },

  "elixir.pathToElixirLS":"~/.elixir_ls/release/language_server.sh",

  "eslint.enable": true,
  "eslint.run": "onSave",
  "eslint.options": { "cache": true },
  "eslint.autoFixOnSave": true,


  "rust.clippy_preference": "on",

  "solargraph.hover": true,
  "solargraph.diagnostics": true,
  "solargraph.formatting": false,
  "solargraph.useBundler": true,

  "stylelintplus.enable": true,
  "stylelintplus.validateOnSave": true,
  "stylelintplus.autoFixOnSave": true,

  "coc.source.OmniSharp.enable": true
}
